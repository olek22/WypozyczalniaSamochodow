@model IEnumerable<projektWypozyczalnia_Gola.Models.wypozyczalnia>

@{
    ViewBag.Title = "Wypozyczalnia";
}
<hr />
<h4>Wypożyczalnie</h4>
<hr />
@using (Html.BeginForm("Wypozyczalnia", "Home", FormMethod.Get))
{
    @Html.TextBox("searching")<input type="submit" value="Wyszukaj">
}
<hr />
<p>
    @Html.ActionLink("Utwórz nową wypożyczlanie", "CreateWypozyczalnia")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.numer)
        </th>
        <th>
            @Html.ActionLink(@Html.DisplayNameFor(model => model.ulica).ToHtmlString(), "Wypozyczalnia", new { sorting = ViewBag.ulica })
        </th>
        <th>
            @Html.ActionLink(@Html.DisplayNameFor(model => model.miasto).ToHtmlString(), "Wypozyczalnia", new { sorting = ViewBag.miasto })
        </th>
        <th>
            @Html.ActionLink(@Html.DisplayNameFor(model => model.kod).ToHtmlString(), "Wypozyczalnia", new { sorting = ViewBag.kod })
        </th>
        <th>
            @Html.ActionLink(@Html.DisplayNameFor(model => model.nazwa).ToHtmlString(), "Wypozyczalnia", new { sorting = ViewBag.nazwa })
        </th>
        <th></th>
    </tr>
    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="3" style="color: red">
                Nie znaleziono żadnego wyniku
            </td>
        </tr>
    }
    else
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.numer)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ulica)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.miasto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.kod)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.nazwa)
                </td>
                <td>
                    @Html.ActionLink("Edytuj", "EditWypozyczalnia", new { id = item.id }) |
                    @Html.ActionLink("Szczegóły", "DetailsWypozyczalnia", new { id = item.id }) |
                    @Html.ActionLink("Usuń", "DeleteWypozyczalnia", new { id = item.id })
                </td>
            </tr>
        }
    }

    </table>

<div>
    @Html.ActionLink("Wróć do widoku głównego", "Index")
</div>

