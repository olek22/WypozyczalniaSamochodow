@model IEnumerable<projektWypozyczalnia_Gola.Models.kategoria>

@{
    ViewBag.Title = "Kategoria";
}

<hr />
<h4>Kategorie</h4>
<hr />
@using (Html.BeginForm("Kategoria", "Home", FormMethod.Get))
{
    @Html.TextBox("searching")<input type="submit" value="Wyszukaj">
}
<hr />
<p>
    @Html.ActionLink("Utwórz nową kategorię", "CreateKategoria")
</p>
<table class="table">
    <tr>
        <th>
            @Html.ActionLink(@Html.DisplayNameFor(model => model.segment).ToHtmlString(), "Kategoria", new { sorting = ViewBag.segment })
        </th>
        <th></th>
    </tr>
    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="3" style="color: red">
                Nie znaleziono żadnego wyniku
            </td>
        </tr>
    }
    else
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.segment)
                </td>
                <td>
                    @Html.ActionLink("Edytuj", "EditKategoria", new { id = item.id }) |
                    @Html.ActionLink("Szczegóły", "DetailsKategoria", new { id = item.id }) |
                    @Html.ActionLink("Usuń", "DeleteKategoria", new { id = item.id })
                </td>
            </tr>
        }
    }

    </table>
<div>
    @Html.ActionLink("Wróć do widoku głównego", "Index")
</div>
