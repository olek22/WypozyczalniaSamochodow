
@{
    ViewBag.Title = "Werycikacja konta";
}

<h2>Werycikacja konta</h2>

@if (ViewBag.Status != null && Convert.ToBoolean(ViewBag.Status))
{
    <div class="alert alert-success">
        <strong>Sukces!</strong> Twoje konto zostałow aktywowane. Kliknij tu @Html.ActionLink("Login", "Login", "User")
    </div>
}
else
{
    <div class="alert alert-danger">
        <strong>Error!</strong> @ViewBag.Message
    </div>
}

<div>
    @Html.ActionLink("Rejestracja", "Registration", "User")
</div>
<div>
    @Html.ActionLink("Zaloguj się", "Login", "User")
</div>